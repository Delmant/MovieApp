<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="colorOnSurfaceVariant">@color/pale_blue</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="CustomActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/white</item>
        <item name="theme">@style/Theme.MovieApp</item>
    </style>

    <style name="ActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">@font/montserrat_black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="ActionBarTitleTextSmall" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="TextSearchSetting">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="TextSearchSettingUserChoose">
        <item name="android:textColor">@color/pale_grey</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">16dp</item>
    </style>

</resources>